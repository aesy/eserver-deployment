- "{{ webserver.root_dir }}/httpd.conf:/usr/local/apache2/conf/httpd.conf"
- "{{ webserver.root_dir }}/httpd-vhosts.conf:/usr/local/apache2/conf/extra/httpd-vhosts.conf"

{% for site in webserver.sites %}
- "{{ webserver.root_dir }}/{{ site.owner }}/{{ site.url }}:/usr/local/apache2/htdocs/{{ site.url }}"
{% endfor %}
