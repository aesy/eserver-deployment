# debug = true
logLevel = "INFO"

defaultEntryPoints = ["http", "https"]

[entryPoints]
  [entryPoints.http]
  address = ":80"
  compress = true
  [entryPoints.https]
  address = ":443"
  compress = true
    [entryPoints.https.tls]
  [entryPoints.traefik]
  address = ":9091"
    [entryPoints.traefik.auth]
      [entryPoints.traefik.auth.basic]
      users = ["{{ traefik_api_user }}:{{ traefik_api_password | password_hash('bcrypt', traefik_api_password_salt) }}"]

[api]
entryPoint = "traefik"
dashboard = true

[docker]
watch = true
endpoint = "unix:///var/run/docker.sock"
exposedByDefault = false

[consul]
watch = true
endpoint = "consul-server:8500"
prefix = "traefik"
username = "{{ traefik_api_user }}"
password = "{{ traefik_api_password | password_hash('bcrypt', traefik_api_password_salt) }}"

[acme]
email = "{{ acme_email }}"
storage = "acme/account"
entryPoint = "https"
acmeLogging = true
  [acme.dnsChallenge]
  provider = "{{ acme_provider }}"
  delayBeforeCheck = 0

{% for domain in domains %}
[[acme.domains]]
  main = "*.{{ domain.name }}"
  sans = ["{{ domain.name }}"]
{% endfor %}
